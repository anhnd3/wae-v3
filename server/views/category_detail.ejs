    <!-- Start Header Top Area -->
    <div class="header-top-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
            <div class="logo-area">
              <a href="#">
                <img src="//wae.vn/static/notika/img/logo/logo.png" alt="" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Header Top Area -->
    <!-- Mobile Menu start -->
    <div class="mobile-menu-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="mobile-menu">
              <nav id="dropdown">
                <ul class="mobile-menu-nav">
                  <li>
                    <a href="/cmstool">Dashboard</a>
                  </li>
                  <li class="active">
                    <a href="/cmstool/categories">Categories</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Mobile Menu end -->
    <!-- Main Menu area start-->
    <div class="main-menu-area mg-tb-40">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <ul class="nav nav-tabs notika-menu-wrap menu-it-icon-pro">
              <li>
                <a href="/cmstool">
                  <i class="notika-icon notika-house"></i> Dashboard
                </a>
              </li>
              <li class="active">
                <a href="/cmstool/categories">
                  <i class="notika-icon notika-form"></i> Categories
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Main Menu area End-->
    <!-- Start Category detail area -->
    <div class="form-example-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-example-wrap mg-t-30">
              <div class="cmp-tb-hd cmp-int-hd">
                <h2>
                  Category <%= (locals.category)?locals.category.name : '' %>
                </h2>
              </div>
              <form
                name="category-form-detail"
                method="POST"
                action="/cmstool/categories/createorupdate"
              >
                <div class="form-example-int form-horizental mg-t-15">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                        <label class="hrzn-fm">Name</label>
                      </div>
                      <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                        <div class="nk-int-st">
                          <input
                            type="text"
                            class="form-control input-sm"
                            placeholder="Category name"
                            value="<%= (locals.category)?locals.category.name : '' %>"
                            name="name"
                            autocomplete="off"
                          />
                          <input
                            type="hidden"
                            class="form-control input-sm"
                            value="<%= (locals.category)?locals.category.id : '' %>"
                            name="id"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-example-int form-horizental mg-t-15">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12">
                        <label class="hrzn-fm">Description</label>
                      </div>
                      <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                        <div class="nk-int-st">
                          <input
                            type="text"
                            class="form-control input-sm"
                            value="<%= (locals.category)?locals.category.description : '' %>"
                            name="description"
                            autocomplete="off"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="form-example-int mg-t-15">
                  <div class="row">
                    <div class="col-lg-2 col-md-3 col-sm-3 col-xs-12"></div>
                    <div class="col-lg-8 col-md-7 col-sm-7 col-xs-12">
                      <button
                        class="btn btn-success notika-btn-success waves-effect"
                        type="submit"
                      >
                        Submit
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Category detail area-->
    <!-- Start Footer area-->
    <div class="footer-copyright-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="footer-copy-right">
              <p>
                Copyright Â© 2019 . All rights reserved. Developer by
                <a href="https://github.com/anhnd3" target="_blank">AnhND</a>.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- End Footer area-->
    <% include ./static_footer %>
  </body>
</html>
